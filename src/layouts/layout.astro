---
import "../styles/global.css";
import BuyMeACoffeList from "../components/BuyMeACoffeList.astro";

const metadata = {
  title:
    "Convierta su texto a mayúsculas o minúsculas en cuestión de segundos con nuestra herramienta en línea.",
  description:
    "Convierte de Texto: Convierte Fácilmente Minúsculas en Mayúsculas y Viceversa. Herramienta en línea gratuita para cambiar el formato de texto a mayúsculas y minúsculas. ¡Optimiza, edítalo y personalízalo según tus necesidades! Cambia letras a mayúsculas o minúsculas en segundos.",
  keywords:
    "convertir texto, mayúsculas, minúsculas, conversor en línea, convertir mayúsculas a minúsculas, convertir minúsculas a mayúsculas, conversor de texto en línea, herramienta en línea, simple, cambiar",
  url: "https://minusculasymayusculas.com/",
  urlimg: "https://minusculasymayusculas.com/logo.png",
};
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
    <meta name="keywords" content={metadata.keywords} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={metadata.url} />
    <meta property="og:title" content={metadata.title} />
    <meta property="og:description" content={metadata.description} />
    <meta property="og:image" content={metadata.urlimg} />
    <meta property="og:url" content={metadata.url} />
    <meta property="og:type" content="website" />
    <meta
      name="google-site-verification"
      content="EiVeXAlUPH8SO35GbfwodMcR7bAj7DAHoqYxJ2t1DcQ"
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={metadata.url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={metadata.description} />
    <meta property="og:description" content={metadata.description} />
    <meta property="og:image" content={metadata.urlimg} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={metadata.url} />
    <meta property="twitter:url" content={metadata.url} />
    <meta name="twitter:title" content={metadata.description} />
    <meta name="twitter:description" content={metadata.description} />
    <meta name="twitter:image" content={metadata.urlimg} />
  </head>
  <body class="max-h-screen flex justify-center items-center mt-2 sm:mt-5 p-4">
    <div class="max-w-screen-sm space-y-5">
      <main>
        <slot />
      </main>
      <footer class="flex justify-center items-center p-2">
        <BuyMeACoffeList />
      </footer>
    </div>
  </body>
</html>
